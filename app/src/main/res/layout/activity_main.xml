<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_blue_bright"
    android:visibility="visible"
    tools:context="com.hfad.boadingplacefinder.MainActivity">


    <ImageView
        android:id="@+id/backgroundimg"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/dor" />

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/findimg"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/findimg"
        android:visibility="visible"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/rentimg"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/findimg"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:visibility="visible"
        app:srcCompat="@drawable/rent" />

    <ImageView
        android:id="@+id/findimg"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/logoimg"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="122dp"
        android:visibility="visible"
        app:srcCompat="@drawable/find" />


    <Button
        android:id="@+id/find"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Find Now"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorAccent" />

    <Button
        android:id="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:text="Regester Now" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="20dp"

        android:layout_above="@+id/signin"
        android:layout_alignEnd="@+id/signup"
        android:layout_alignRight="@+id/signup"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="or?"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/signin"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/signup"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signup"
        android:text="Sign In" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_alignLeft="@+id/findimg"
        android:layout_alignStart="@+id/findimg"
        android:layout_below="@+id/findimg"
        android:text="ARE YOU LOOKING FOR A BOARDING PLACE?"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/rentimg"
        android:layout_alignStart="@+id/rentimg"
        android:layout_below="@+id/rentimg"
        android:text="ARE YOU OFFERING A BOARDING PLACE?"
        android:textAlignment="center"
        android:visibility="visible" />


</RelativeLayout>
